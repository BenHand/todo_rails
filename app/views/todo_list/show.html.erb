<div class="show">
  <h1> Requested Todo </h1>
    <%= form_tag("/todos/#{params[:id]}", method: "put") do %>
      <%= render partial: 'todo_list', locals: { todo: todos } %>
        <%= hidden_field_tag(:complete, 'true' ) %>

    <%= submit_tag("Mark as Completed") %>
    <% end %>
    <p>
      <%= form_tag("/todos/#{params[:id]}", method: "put") do %>
        <%= label_tag(:body, "Change this todo to > ") %>
        <%= text_field_tag(:body) %>
        <%= submit_tag("SAVE") %>
      <% end %>
    </p>
</div>
