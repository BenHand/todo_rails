<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<header>
    <h1 class="show-head"> Todo-List </h1>
    <nav>
      <a href="/todos">Home</a>
        <div class="create-tag">
          <%= form_tag("/todos", method: "post") do %>
            <%= label_tag(:body, "What do you need ToDo?") %>
            <%= text_field_tag(:body) %>
            <%= submit_tag("Add") %>
          <% end %>
        </div>
    </nav>
  </header>
  <body>
  <%= yield %>
    <footer>
      <a href="https://github.com/BenHand/todo_rails">GitHub</a>
    </footer>
  </body>
</html>
